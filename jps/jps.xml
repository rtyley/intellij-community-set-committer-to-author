<?xml version="1.0" encoding="UTF-8"?>
<project name="jps" default="all">
  
  
  <property file="jps.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="128m"/>
  <patternset id="ignored.files">
    <exclude name="**/CVS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
    <exclude name="**/.sbas/**"/>
    <exclude name="**/.IJI.*/**"/>
    <exclude name="**/.pyc/**"/>
    <exclude name="**/.pyo/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/.hg/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.zip"/>
    <include name="*.war"/>
    <include name="*.egg"/>
    <include name="*.ear"/>
    <include name="*.swc"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <include name="**/?*.properties"/>
    <include name="**/?*.xml"/>
    <include name="**/?*.gif"/>
    <include name="**/?*.png"/>
    <include name="**/?*.jpeg"/>
    <include name="**/?*.jpg"/>
    <include name="**/?*.html"/>
    <include name="**/?*.dtd"/>
    <include name="**/?*.tld"/>
    <include name="**/?*.ftl"/>
    <include name="**//META-INF/services/?*"/>
  </patternset>
  
  
  <!-- Project Libraries -->
  
  <path id="library.ant.classpath">
    <pathelement location="${basedir}/lib/ant-1.7.1.jar"/>
  </path>
  
  <path id="library.groovy.classpath">
    <pathelement location="${basedir}/lib/groovy-all-1.7.1.jar"/>
  </path>
  
  <path id="library.javac2.classpath">
    <pathelement location="${basedir}/lib/javac2-all.jar"/>
  </path>
  
  <path id="library.junit.classpath">
    <pathelement location="${basedir}/lib/junit.jar"/>
  </path>
  
  
  <!-- Global Libraries -->
  
  <path id="library.gant.classpath">
    <pathelement location="/home/nik/applications/gant-1.9.1/lib/gant-1.9.1_groovy-1.7.0.jar"/>
    <pathelement location="/home/nik/applications/groovy-1.7.0/embeddable/groovy-all-1.7.0.jar"/>
    <pathelement location="/home/nik/applications/groovy-1.7.0/lib/ant-launcher-1.7.1.jar"/>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm.jar"/>
    <pathelement location="${javac2.home}/asm-commons.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
    <property name="grooovyc.task.sdk" value="library.groovy.classpath"/>
    <taskdef name="groovyc" classname="org.codehaus.groovy.ant.Groovyc" classpathref="${grooovyc.task.sdk}"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module antlayout -->
  
  <dirname property="module.antlayout.basedir" file="${ant.file}"/>
  
  
  
  <property name="compiler.args.antlayout" value="${compiler.args}"/>
  
  <property name="antlayout.output.dir" value="${module.antlayout.basedir}/out/production/antlayout"/>
  <property name="antlayout.testoutput.dir" value="${module.antlayout.basedir}/out/test/antlayout"/>
  
  <path id="antlayout.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="antlayout.module.production.classpath">
    <path refid="library.ant.classpath"/>
  </path>
  
  <path id="antlayout.runtime.production.module.classpath">
    <pathelement location="${antlayout.output.dir}"/>
    <path refid="library.ant.classpath"/>
  </path>
  
  <path id="antlayout.module.classpath">
    <pathelement location="${antlayout.output.dir}"/>
    <path refid="library.ant.classpath"/>
  </path>
  
  <path id="antlayout.runtime.module.classpath">
    <pathelement location="${antlayout.testoutput.dir}"/>
    <pathelement location="${antlayout.output.dir}"/>
    <path refid="library.ant.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.antlayout">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.antlayout">
    <patternset refid="excluded.from.module.antlayout"/>
  </patternset>
  
  <path id="antlayout.module.sourcepath">
    <dirset dir="${module.antlayout.basedir}/antLayout">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.antlayout" depends="compile.module.antlayout.production,compile.module.antlayout.tests" description="Compile module antlayout"/>
  
  <target name="compile.module.antlayout.production" depends="register.custom.compilers" description="Compile module antlayout; production classes">
    <mkdir dir="${antlayout.output.dir}"/>
    <javac2 destdir="${antlayout.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true">
      <compilerarg line="${compiler.args.antlayout}"/>
      <bootclasspath refid="antlayout.module.bootclasspath"/>
      <classpath refid="antlayout.module.production.classpath"/>
      <src refid="antlayout.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.antlayout"/>
    </javac2>
    
    <copy todir="${antlayout.output.dir}">
      <fileset dir="${module.antlayout.basedir}/antLayout/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.antlayout.tests" depends="register.custom.compilers,compile.module.antlayout.production" description="compile module antlayout; test classes" unless="skip.tests"/>
  
  <target name="clean.module.antlayout" description="cleanup module">
    <delete dir="${antlayout.output.dir}"/>
    <delete dir="${antlayout.testoutput.dir}"/>
  </target>
  
  
  <!-- Module jps -->
  
  <dirname property="module.jps.basedir" file="${ant.file}"/>
  
  
  
  <property name="compiler.args.jps" value="${compiler.args}"/>
  
  <property name="jps.output.dir" value="${module.jps.basedir}/out/production/jps"/>
  <property name="jps.testoutput.dir" value="${module.jps.basedir}/out/test/jps"/>
  
  <path id="jps.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="jps.module.production.classpath">
    <path refid="library.ant.classpath"/>
    <path refid="library.javac2.classpath"/>
    <pathelement location="${antlayout.output.dir}"/>
    <path refid="library.gant.classpath"/>
  </path>
  
  <path id="jps.runtime.production.module.classpath">
    <pathelement location="${jps.output.dir}"/>
    <path refid="library.ant.classpath"/>
    <path refid="library.javac2.classpath"/>
    <path refid="antlayout.runtime.production.module.classpath"/>
    <path refid="library.gant.classpath"/>
  </path>
  
  <path id="jps.module.classpath">
    <pathelement location="${jps.output.dir}"/>
    <path refid="library.ant.classpath"/>
    <path refid="library.javac2.classpath"/>
    <pathelement location="${antlayout.testoutput.dir}"/>
    <pathelement location="${antlayout.output.dir}"/>
    <path refid="library.junit.classpath"/>
    <path refid="library.gant.classpath"/>
  </path>
  
  <path id="jps.runtime.module.classpath">
    <pathelement location="${jps.testoutput.dir}"/>
    <pathelement location="${jps.output.dir}"/>
    <path refid="library.ant.classpath"/>
    <path refid="library.javac2.classpath"/>
    <path refid="antlayout.runtime.module.classpath"/>
    <path refid="library.junit.classpath"/>
    <path refid="library.gant.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.jps">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.jps">
    <patternset refid="excluded.from.module.jps"/>
  </patternset>
  
  <path id="jps.module.sourcepath">
    <dirset dir="${module.jps.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  <path id="jps.module.test.sourcepath">
    <dirset dir="${module.jps.basedir}">
      <include name="testSrc"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.jps" depends="compile.module.jps.production,compile.module.jps.tests" description="Compile module jps"/>
  
  <target name="compile.module.jps.production" depends="register.custom.compilers,compile.module.antlayout" description="Compile module jps; production classes">
    <mkdir dir="${jps.output.dir}"/>
    <groovyc destdir="${jps.output.dir}" fork="yes">
      <src refid="jps.module.sourcepath"/>
      <classpath refid="jps.module.production.classpath"/>
      <patternset refid="excluded.from.compilation.jps"/>
      <javac debug="${compiler.debug}">
        <compilerarg line="${compiler.args.jps}"/>
      </javac>
    </groovyc>
    <instrumentIdeaExtensions destdir="${jps.output.dir}">
      <compilerarg line="${compiler.args.jps}"/>
      <bootclasspath refid="jps.module.bootclasspath"/>
      <classpath refid="jps.module.production.classpath"/>
      <src refid="jps.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.jps"/>
    </instrumentIdeaExtensions>
    
    <copy todir="${jps.output.dir}">
      <fileset dir="${module.jps.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.jps.tests" depends="register.custom.compilers,compile.module.jps.production" description="compile module jps; test classes" unless="skip.tests">
    <mkdir dir="${jps.testoutput.dir}"/>
    <groovyc destdir="${jps.testoutput.dir}" fork="yes">
      <src refid="jps.module.test.sourcepath"/>
      <classpath refid="jps.module.classpath"/>
      <patternset refid="excluded.from.compilation.jps"/>
      <javac debug="${compiler.debug}">
        <compilerarg line="${compiler.args.jps}"/>
      </javac>
    </groovyc>
    <instrumentIdeaExtensions destdir="${jps.testoutput.dir}">
      <compilerarg line="${compiler.args.jps}"/>
      <bootclasspath refid="jps.module.bootclasspath"/>
      <classpath refid="jps.module.classpath"/>
      <src refid="jps.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.jps"/>
    </instrumentIdeaExtensions>
    
    <copy todir="${jps.testoutput.dir}">
      <fileset dir="${module.jps.basedir}/testSrc">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.jps" description="cleanup module">
    <delete dir="${jps.output.dir}"/>
    <delete dir="${jps.testoutput.dir}"/>
  </target>
  
  
  <!-- Module javaee -->
  
  <dirname property="module.javaee.basedir" file="${ant.file}"/>
  
  
  
  <property name="compiler.args.javaee" value="${compiler.args}"/>
  
  <property name="javaee.output.dir" value="${module.javaee.basedir}/out/production/javaee"/>
  <property name="javaee.testoutput.dir" value="${module.javaee.basedir}/out/test/javaee"/>
  
  <path id="javaee.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="javaee.module.production.classpath">
    <path refid="library.groovy.classpath"/>
    <pathelement location="${jps.output.dir}"/>
    <path refid="library.gant.classpath"/>
  </path>
  
  <path id="javaee.runtime.production.module.classpath">
    <pathelement location="${javaee.output.dir}"/>
    <path refid="library.groovy.classpath"/>
    <path refid="jps.runtime.production.module.classpath"/>
    <path refid="library.gant.classpath"/>
  </path>
  
  <path id="javaee.module.classpath">
    <pathelement location="${javaee.output.dir}"/>
    <path refid="library.groovy.classpath"/>
    <pathelement location="${jps.testoutput.dir}"/>
    <pathelement location="${jps.output.dir}"/>
    <path refid="library.gant.classpath"/>
  </path>
  
  <path id="javaee.runtime.module.classpath">
    <pathelement location="${javaee.testoutput.dir}"/>
    <pathelement location="${javaee.output.dir}"/>
    <path refid="library.groovy.classpath"/>
    <path refid="jps.runtime.module.classpath"/>
    <path refid="library.gant.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.javaee">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.javaee">
    <patternset refid="excluded.from.module.javaee"/>
  </patternset>
  
  <path id="javaee.module.sourcepath">
    <dirset dir="${module.javaee.basedir}/plugins/javaee">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.javaee" depends="compile.module.javaee.production,compile.module.javaee.tests" description="Compile module javaee"/>
  
  <target name="compile.module.javaee.production" depends="register.custom.compilers,compile.module.jps" description="Compile module javaee; production classes">
    <mkdir dir="${javaee.output.dir}"/>
    <groovyc destdir="${javaee.output.dir}" fork="yes">
      <src refid="javaee.module.sourcepath"/>
      <classpath refid="javaee.module.production.classpath"/>
      <patternset refid="excluded.from.compilation.javaee"/>
      <javac debug="${compiler.debug}">
        <compilerarg line="${compiler.args.javaee}"/>
      </javac>
    </groovyc>
    <instrumentIdeaExtensions destdir="${javaee.output.dir}">
      <compilerarg line="${compiler.args.javaee}"/>
      <bootclasspath refid="javaee.module.bootclasspath"/>
      <classpath refid="javaee.module.production.classpath"/>
      <src refid="javaee.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.javaee"/>
    </instrumentIdeaExtensions>
    
    <copy todir="${javaee.output.dir}">
      <fileset dir="${module.javaee.basedir}/plugins/javaee/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.javaee.tests" depends="register.custom.compilers,compile.module.javaee.production" description="compile module javaee; test classes" unless="skip.tests"/>
  
  <target name="clean.module.javaee" description="cleanup module">
    <delete dir="${javaee.output.dir}"/>
    <delete dir="${javaee.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.antlayout, clean.module.jps, clean.module.javaee" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.antlayout, compile.module.jps, compile.module.javaee" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>